{
  "name": "react-with-steal-and-ssr-demo",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "KEY=~/.localhost-ssl/server.key CERT=~/.localhost-ssl/server.cert node server.js",
    "debug": "KEY=~/.localhost-ssl/server.key CERT=~/.localhost-ssl/server.cert node --inspect-brk server.js",
    "build": "NODE_ENV=production steal-tools build --envify"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "can-define": "^1.5.1",
    "can-zone": "^0.6.12",
    "can-zone-jsdom": "^1.3.0",
    "done-ssr": "^1.2.0-beta.2",
    "donejs-spdy": "^3.4.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "express": "^4.16.2",
    "react": "^16.0.0",
    "react-bootstrap": "^0.31.3",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "react-view-model": "^0.5.9",
    "steal-qunit": "^1.0.1"
  },
  "devDependencies": {
    "serve": "^6.2.0",
    "steal": "^1.5.15",
    "steal-tools": "^1.9.1",
    "steal-css": "^1.3.1",
    "steal-less": "^1.2.0"
  },
  "steal": {
    "map": {
      "bootstrap.css": "bootstrap/dist/css/bootstrap.css"
    },
    "plugins": [
      "steal-css",
      "steal-less"
    ],
    "babelOptions": {
      "plugins": [
        "transform-class-properties"
      ]
    }
  }
}
